@if (childToView == null)
{
    <p>no child found</p>
}
else{
<div class="bg-green-100 py-20 min-h-screen px-0">
<!--   tip; mx-auto -- jagab ilusti keskele  -->
<div class="bg-white md:w-3/4 lg:w-1/4 mx-auto flex items-center justify-center shadow-xl">


    <div class="bg-white rounded my-6">
