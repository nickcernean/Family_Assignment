        <div class="flex items-center justify-center py-1 text-m ">
            <p class="text-black font-black px-2">EyeColor: </p>
            <p class="px-2">@childToView.EyeColor</p>
        </div>
        <div class="flex items-center justify-center py-1 text-m ">
